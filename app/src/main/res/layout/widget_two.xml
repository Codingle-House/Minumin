<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_button_white"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/widget_cardview_mascot"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/general_shape_circle_white"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/general_ic_mascot" />

    <LinearLayout
        android:id="@+id/widget_linear_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/widget_cardview_mascot"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_textview_current_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/dark_textview"
            android:textSize="@dimen/_18ssp"
            tools:text="1500 ml" />

        <TextView
            android:id="@+id/widget_textview_total_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/dark_textview"
            android:textSize="@dimen/_12ssp"
            tools:text="2000 ml" />
    </LinearLayout>


    <ImageView
        android:id="@+id/widget_cardview_add_2"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/general_shape_circle_green"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/general_ic_add" />

    <ProgressBar
        android:id="@+id/widget_progresbar_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_linear_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:progress="10"
        android:progressDrawable="@drawable/general_bg_progressbar" />
</RelativeLayout>