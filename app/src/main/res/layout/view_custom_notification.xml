<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/notifdialog_imageview_logo"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_10ssp"
        android:src="@drawable/general_ic_mascot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notifdialog_imageview_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifdialog_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10ssp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/notifdialog_title_custom"
            android:textColor="@color/dark_textview"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notifdialog_textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10ssp"
            android:text="@string/notifdialog_text_custom"
            android:textColor="@color/dark_textview"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>
</RelativeLayout>