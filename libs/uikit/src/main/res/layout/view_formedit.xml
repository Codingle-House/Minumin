<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/register_relativelayout_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/uikit_bg_form"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/register_edittext_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@id/register_textview_units"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:imeOptions="actionDone"
            android:textColor="@color/dark_textview"
            android:textColorHint="@color/hint_textview"
            android:textSize="@dimen/_12ssp" />

        <id.co.minumin.uikit.MinuminTextView
            android:id="@+id/register_textview_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:minumin_text_code="p_a_s"
            app:minumin_text_color="dark" />

    </RelativeLayout>

    <id.co.minumin.uikit.MinuminTextView
        android:id="@+id/register_textview_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:minumin_text_code="h7_S"
        app:minumin_text_color="error" />
</LinearLayout>